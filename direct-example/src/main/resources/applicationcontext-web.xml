<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- <context:annotation-config /> <context:component-scan base-package="org.cfr.direct.testing" 
		/> -->


	<bean id="directManager" class="org.cfr.direct.impl.ServletDirectManager">
		<property name="debug" value="true"/>
		<property name="jsApiPath" value="/"/>
		<property name="name" value="Direct"/>
		<property name="namespace" value="App.Direct"/>
		<property name="providersUrl" value="/service/direct"/>
	</bean>

	<bean id="Direct" class="org.cfr.direct.servlet.HttpDirectRequestHandler">
		<constructor-arg ref="directManager" />
	</bean>
	
	
</beans>
